---
interface Props {
  class?: string;
  capitulo?: string;
  nombre?: string;
  video?: string;
}
const { capitulo, nombre, video } = Astro.props;
---

<article
  class={`
    ${Astro.props.class}
    col-span-5
    relative rounded-xl
    backdrop-blur-md
    border border-black/10
    shadow-inner shadow-white/10
    overflow-hidden
    group
  `}
>
  <div class="bg-navy py-8">
    <!-- Cambio de color de fondo a azul -->
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-semibold text-center mb-6 text-yellow-500">
        {capitulo}
      </h2>
      <!-- Cambio del color de las letras  a amarillo -->
      <div class="">
        <!-- Miembro #1 -->
        <div class="">
          <div>
            <slot name="image" />
            <div
           
            class=" "
            >
              <slot name="image" />
            </div>
            <p class="text-3xl font-semibold text-center mb-6 text-yellow-500">
              {nombre}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
